                    <div class="content-body">
                        <div style="padding:10px;margin-left:1.5rem;">
                            <form class="form-inline my-2 my-lg-0" action="/search" method="POST">
                                <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search"
                                    style="width: 522px" aria-label="Search" />
                                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit" style="height: 55px">
                                    Search
                                </button>
                            </form>
                        </div>
                        <div class="news-container">
                            <div class="news">


                                <% articles.forEach(function(article,index){ %>
                                    <% if ((typeof article.url=='object' ) || (typeof article.title=='object' ) ||
                                        (typeof article.urlToImage=='object' ) || (typeof article.content=='object' )){
                                        %>
                                        <% } else{ %>
                                            <a href="<%- article.url %>" target="_blank" class="news-box Hover-effect">
                                                <img src="<%- article.urlToImage %>" alt="Image" />
                                                <h3>
                                                    <%- article.title %>
                                                </h3>

                                                <p>
                                                    <%- article.content %>
                                                </p>
                                                <br />
                                                <p style="
                                    margin-bottom: 0px;
                                    position: relative;
                                    right: 0;
                                    bottom: 0;
                                    font-family: ui-monospace;
                                ">
                                                    Updated:
                                                    <span style="color: blue">
                                                        <%- new Date(article.publishedAt.slice(0,10)).toDateString() %>
                                                            <%- moment(article.publishedAt).format('hh : mm A');%>
                                                    </span>
                                                </p>
                                            </a>
                                            <% } %>
                                                <% }) %>
                            </div>
                        </div>
                    </div>
